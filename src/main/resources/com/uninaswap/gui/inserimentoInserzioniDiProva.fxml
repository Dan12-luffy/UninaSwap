<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uninaswap.controllers.NewInsertionController">
    <center>
        <VBox spacing="10.0" maxWidth="500">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Aggiungi nuova inserzione" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                    </columnConstraints>

                    <children>
                        <!-- Titolo -->
                        <Label text="Titolo:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <TextField fx:id="titleField" promptText="Inserisci il titolo" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <!-- Immagine -->
                        <Label text="Immagine:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <HBox spacing="10.0" GridPane.rowIndex="1" GridPane.columnIndex="1">
                            <TextField fx:id="imagePathField" promptText="Nessun file selezionato" HBox.hgrow="ALWAYS" editable="false" />
                            <Button text="Sfoglia" onAction="#handleSelectImage" />
                        </HBox>

                        <!-- Descrizione -->
                        <Label text="Descrizione:" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.valignment="TOP" />
                        <TextArea fx:id="descriptionArea" promptText="Inserisci una descrizione" prefHeight="100.0"
                                  wrapText="true" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <!-- Tipo -->
                        <Label text="Tipo:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                        <ComboBox fx:id="typeComboBox" prefWidth="150.0" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                        <!-- Prezzo -->
                        <Label text="Prezzo:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                        <TextField fx:id="priceField" promptText="0.00" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                        <!-- Stato -->
                        <Label text="Stato:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                        <ComboBox fx:id="statusComboBox" prefWidth="150.0" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                        <!-- Data di pubblicazione -->
                        <Label text="Data pubbl.:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                        <DatePicker fx:id="publishDatePicker" GridPane.rowIndex="6" GridPane.columnIndex="1" />

                        <!-- Categoria -->
                        <Label text="Categoria:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                        <ComboBox fx:id="categoryComboBox" prefWidth="150.0" GridPane.rowIndex="7" GridPane.columnIndex="1" />
                    </children>
                </GridPane>

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <Button text="Annulla" onAction="#handleCancel" />
                    <Button text="Salva" onAction="#handleSave" defaultButton="true" />
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>