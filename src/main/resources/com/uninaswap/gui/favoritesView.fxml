<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefWidth="800" prefHeight="600" stylesheets="@../guiCSS/favoriteView.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.uninaswap.controllers.FavoritesViewController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <Button fx:id="backButton" onAction="#goBack" styleClass="back-button" text="Indietro" />
            <Label styleClass="page-title" text="I miei preferiti" />
        </HBox>
    </top>
    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                <VBox fx:id="favoritesContainer" spacing="10">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <Label fx:id="emptyLabel" styleClass="placeholder-text" text="Non hai ancora elementi nei preferiti." />
                </VBox>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>